<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="eu.grassnick.inventoryappv1">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".AddProductActivity"
            android:label="@string/title_activity_add_product"
            android:parentActivityName="eu.grassnick.inventoryappv1.AddProductActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="eu.grassnick.inventoryappv1.MainActivity" />
        </activity>

        <activity
            android:name=".EditProductActivity"
            android:label="@string/title_activity_edit_product"
            android:parentActivityName="eu.grassnick.inventoryappv1.ViewProductActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="eu.grassnick.inventoryappv1.MainActivity" />
        </activity>

        <activity
            android:name=".ViewProductActivity"
            android:label="@string/title_activity_add_product"
            android:parentActivityName="eu.grassnick.inventoryappv1.MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="eu.grassnick.inventoryappv1.MainActivity" />
        </activity>
    </application>

</manifest>
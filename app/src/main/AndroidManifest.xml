<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="eu.grassnick.inventoryapp">

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_store"
        android:label="@string/app_name"
        android:roundIcon="@drawable/ic_store"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity android:name="eu.grassnick.inventoryapp.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name="eu.grassnick.inventoryapp.AddProductActivity"
            android:label="@string/title_activity_add_product"
            android:parentActivityName="eu.grassnick.inventoryapp.AddProductActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="eu.grassnick.inventoryapp.MainActivity" />
        </activity>

        <activity
            android:name="eu.grassnick.inventoryapp.EditProductActivity"
            android:label="@string/title_activity_edit_product"
            android:parentActivityName="eu.grassnick.inventoryapp.ViewProductActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="eu.grassnick.inventoryapp.MainActivity" />
        </activity>

        <activity
            android:name="eu.grassnick.inventoryapp.ViewProductActivity"
            android:label="@string/title_activity_add_product"
            android:parentActivityName="eu.grassnick.inventoryapp.MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="eu.grassnick.inventoryapp.MainActivity" />
        </activity>
    </application>

</manifest>